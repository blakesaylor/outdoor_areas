<h1>Edit Area</h1>
<%= form_with url: "/areas/#{@area.id}", method: :patch, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, value: @area.name %>
  </div>

  <br>

  <div>
    <%= form.label :state %>
    <%= form.text_field :state, value: @area.state %>
  </div>

  <br>

  <div>
    <%= form.label 'Has Rock Climbing?' %>
    <%= form.check_box :rock_climbing, checked: @area.rock_climbing %>
  </div>

  <br>
  
  <div>
    <%= form.label :elevation %>
    <%= form.number_field :elevation, value: @area.elevation %>
  </div>

  <br>
  
  <div>
    <%= form.label :latitude %>
    <%= form.number_field :latitude, step: :any, value: @area.latitude %>
  </div>

  <br>
  
  <div>
    <%= form.label :longitude %>
    <%= form.number_field :longitude, step: :any, value: @area.longitude %>
  </div>

  <br>
  
  <%= form.submit 'Update Area' %>
<% end %>