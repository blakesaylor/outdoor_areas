<%= link_to 'Areas Index', '/areas' %> | <%= link_to 'Climbs Index', '/climbs' %>
<h1>Update <%= @climb.name %></h1>
<%= form_with url: "/climbs/#{@climb.id}/", method: :patch, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, value: @climb.name %>
  </div>

  <br>
  
  <div>
    <%= form.label :top_rope, 'Top Ropeable?' %>
    <%= form.check_box :top_rope, checked: @climb.top_rope %>
  </div>

  <br>
  
  <div>
    <%= form.label :grade, 'Grade: ' %>
    <%= form.text_field :grade, value: @climb.grade %>
  </div>

  <br>

  <div>
    <%= form.label :pitches, 'Pitches: ' %>
    <%= form.text_field :pitches, value: @climb.pitches %>
  </div>

  <br>
  
  <%= form.submit 'Update Climb' %>
<% end %>