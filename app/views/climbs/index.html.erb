<%= link_to 'Areas Index', '/areas' %> | <%= link_to 'Climbs Index', '/climbs' %>
<h1>Climbs</h1>
<ul>
    <% @climbs.show_top_ropeable.each_with_index do |climb, index| %>
        <div id="climb-<%=index%>">
            <li><strong><%= climb.name %></strong> | <a href="/climbs/<%= "#{climb.id}" %>/edit">Edit Climb</a></li>
            <ul>
                <li>
                    <strong>Created At: </strong><%= climb.created_at %>
                </li>
            </ul>
        </div>
    <% end %>
</ul>